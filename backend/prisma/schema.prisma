// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  walletAddress String   @unique @db.VarChar(42)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  createdIPs    IPAsset[]
  licenses      License[] @relation("LicenseCreator")
  purchasedLicenses License[] @relation("LicenseBuyer")
  reports       Report[]

  @@index([walletAddress])
  @@map("users")
}

model IPAsset {
  id            String   @id @default(cuid())
  title         String
  description   String?  @db.Text
  creatorWallet String   @db.VarChar(42)
  ipfsHash      String   @unique
  metadataHash  String?
  storyIpId     String?  @unique
  storyTxHash   String?
  category      String?
  tags          String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  creator       User     @relation(fields: [creatorWallet], references: [walletAddress], onDelete: Cascade)
  licenses      License[]
  reports       Report[]

  @@index([creatorWallet])
  @@index([storyIpId])
  @@index([ipfsHash])
  @@map("ip_assets")
}

model License {
  id              String   @id @default(cuid())
  ipId            String
  creatorWallet   String   @db.VarChar(42)
  buyerWallet     String?  @db.VarChar(42)
  termsJson       Json     // License terms stored as JSON
  certificateHash String?
  storyTxHash     String?
  storyLicenseId  String?
  status          String   @default("pending") // pending, active, expired, revoked
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  expiresAt       DateTime?

  // Relations
  ipAsset         IPAsset  @relation(fields: [ipId], references: [id], onDelete: Cascade)
  creator         User     @relation("LicenseCreator", fields: [creatorWallet], references: [walletAddress])
  buyer           User?    @relation("LicenseBuyer", fields: [buyerWallet], references: [walletAddress])

  @@index([ipId])
  @@index([creatorWallet])
  @@index([buyerWallet])
  @@index([storyLicenseId])
  @@map("licenses")
}

model Report {
  id              String   @id @default(cuid())
  ipId            String
  reporterWallet     String   @db.VarChar(42)
  url              String?  @db.Text
  screenshotUrl    String?  @db.Text
  fileUrl          String?  @db.Text
  confidenceScore  Float?
  status           String   @default("pending") // pending, verified, false_positive, resolved
  authenticityReport Json?  // Generated report data
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  ipAsset          IPAsset  @relation(fields: [ipId], references: [id], onDelete: Cascade)
  reporter         User     @relation(fields: [reporterWallet], references: [walletAddress])

  @@index([ipId])
  @@index([reporterWallet])
  @@index([status])
  @@map("reports")
}

model StoryEvent {
  id            String   @id @default(cuid())
  eventType     String   // IPRegistered, LicenseCreated, LicensePurchased
  blockNumber   BigInt
  transactionHash String @unique
  ipId          String?
  licenseId     String?
  walletAddress String?  @db.VarChar(42)
  data          Json     // Event-specific data
  processed     Boolean  @default(false)
  createdAt     DateTime @default(now())

  @@index([eventType])
  @@index([transactionHash])
  @@index([processed])
  @@map("story_events")
}

